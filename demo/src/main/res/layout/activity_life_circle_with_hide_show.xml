<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_life_circle_with_hide_show"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.littlejie.fragment.lifecircle.LifeCircleWithHideShowActivity">

    <Button
        android:id="@+id/btn_show_one_hide_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="show Fragment1,hide Fragment2"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_show_two_hide_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="show Fragment2,hide Fragment1"
        android:textAllCaps="false" />

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
</LinearLayout>
