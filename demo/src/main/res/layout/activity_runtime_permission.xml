<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_runtime_permission"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.littlejie.demo.modules.base.system.RuntimePermissionActivity">

    <Button
        android:id="@+id/btn_check_write_external_storage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="检查存储写入权限" />

    <Button
        android:id="@+id/btn_check_multiple_permission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="多个权限检查" />
</LinearLayout>
