<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- 设置全局背景色 -->
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LollypopTheme" parent="AppTheme.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/LollypopActionBar</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <!-- 如果此处改为白色，很多字体颜色都会变成白色，具体等设计确定 -->
        <item name="colorAccent">@color/white</item>
    </style>

    <!-- actionbar -->
    <style name="LollypopActionBar" parent="Widget.AppCompat.Toolbar">
        <!-- Support library compatibility -->
        <item name="contentInsetStart">0dp</item>
        <item name="background">@color/white</item>
    </style>

    <style name="UseTutorial" parent="LollypopTheme">
        <!-- 去掉顶部阴影样式 -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="LollypopButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_button_buy</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">120dp</item>
        <item name="android:layout_marginRight">120dp</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="LollypopText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/pink</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Indicator">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dimen_5dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="BindFailedReason">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/margin32</item>
        <item name="android:layout_marginLeft">@dimen/margin32</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

</resources>
