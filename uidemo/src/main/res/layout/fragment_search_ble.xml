<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <cn.bongmi.uidemo.SearchDeviceImageView
    android:id="@+id/iv_search_ble"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="80dp"
    android:padding="40dp"
    android:src="@drawable/binding_device_search"/>

  <TextView
      android:id="@+id/tv_search"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="40dp"
    android:text="@string/search_device"
    android:textColor="@color/black_transparent_53"
    android:textSize="@dimen/text_size_18sp"/>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="10dp"
    android:text="@string/keep_close_to_phone"
    android:textColor="@color/black_transparent_30"
    android:textSize="@dimen/text_size_14sp"/>
</LinearLayout>