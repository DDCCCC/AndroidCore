<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <TextView
    android:id="@+id/tv_please_open_ble"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="53dp"
    android:text="@string/confirm_bluetooth_on"
    android:textColor="@color/black_transparent_26"
    android:textSize="@dimen/text_size_14sp"/>

  <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tv_please_open_ble"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="79dp"
    android:src="@drawable/binding_bluetooth"/>

  <Button
    android:id="@+id/btn_next"
    style="@style/LollypopButton"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="79dp"
    android:text="@string/next"/>

</RelativeLayout>